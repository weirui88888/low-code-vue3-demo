{
  "name": "butter-membership-web",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "build:staging": "vue-tsc --noEmit && vite build --mode staging",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.cjs,.ts,.cts --fix --ignore-path .gitignore",
    "prettier": "prettier --write \"./**/*.{html,vue,ts,js,json,md,scss}\"",
    "lint:style": "stylelint \"./**/*.{css,less,vue,html}\" --fix",
    "format": "npm run lint && npm run prettier && npm run lint:style",
    "prepare": "husky install"
  },
  "dependencies": {
    "pinia": "^2.0.23",
    "vue": "^3.2.41"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@rushstack/eslint-patch": "^1.1.4",
    "@types/node": "^16.11.68",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "@vitejs/plugin-vue": "^3.1.2",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/tsconfig": "^0.1.3",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.6.0",
    "git-cz": "^4.9.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "mrm": "^4.1.13",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.18",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-html": "^1.5.0",
    "postcss-scss": "^4.0.5",
    "prettier": "^2.7.1",
    "sass": "^1.55.0",
    "stylelint": "^14.14.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-scss": "^8.0.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.3.0",
    "typescript": "~4.7.4",
    "vite": "^3.1.8",
    "vue-tsc": "^1.0.8"
  },
  "lint-staged": {
    "*.{vue,ts,js}": "npm run lint",
    "*.{html,vue,ts,js,json,md,scss}": "npm run prettier",
    "*.{css,less,vue,html}": "npm run lint:style"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  }
}
